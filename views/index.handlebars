<h1>Eat Da Burger!</h1>
<div class="container-fluid">
    <div class="row">
        <div class="col-4">
            <h2>Burgers Devoured!</h2>

            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="card col-4">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label form="bu">Burger Name:</label>
                    <input type="text" id="bu" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured"></label><br>
                    <input type="radio" name="devoured" value="0"> Ready to Devour!
                    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                </div>
                <button class="btn btn-primary" type="submit">Add a Burger</button>
            </form>   
        </div>
                    
